/* General styles */
.post {
  max-width: 1000px;
  overflow-wrap: break-word;
  margin: 0 auto;
  overflow-wrap: break-word;
}
img {
 display: block;
  margin: auto;
}

		  

body {
  font-family: 'Roboto', sans-serif;
  font-size: 16px;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  color:white;
  background: linear-gradient(#141e30, #243b55);
}


a {
  text-decoration: none;
}

.p a:hover {
   text-decoration: underline;
}



.post a {
  color: white;
