  text-decoration: none;
  overflow-wrap: break-word;
}




.logo {
  font-weight: bold;
  font-size: 1.5rem;
}

/* Flash message styles */
.flash {
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 3px;
  color: #fff;
  text-align: center;
}

.flash.success {
  background-color: #28a745;
}

.flash.error {
  background-color: #dc3545;
}

/* Navigace */
.navig {
  background-color: #00008B;	
  padding: 10px;
  margin: 0;
  display: flex;
  text-decoration:none;
  justify-content: space-between;
  align-items: center;
  list-style-type: none;
}

.navig a {
  color: #fff;
  margin-right: 20px;
  list-style-type: none;
}

navig-title {
  text-decoration:none;
